root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

indent_size = 4
indent_style = space

tab_width = 4

max_line_length = 80

[*.{alda,bash,coffee,css,el,ex,exs,html,js,json,lisp,sh,vim,vimrc,zsh}]
# Filetypes that should use 2-space indentation
indent_size = 2

[*[^.]*]
# Extensionless files are probably shell scripts
indent_size = 2

[{.gitconfig,sxhkdrc,Makefile}]
# Filetypes that should use tab indentation
indent_style = tab

[*.{ejs,erb,html,md,org}]
# Unlimited line length
max_line_length = 0
