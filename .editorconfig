root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

indent_size = 4
indent_style = space

tab_width = 4

max_line_length = 80

[*.{alda,coffee,css,ex,exs,html,js,json}]
# Filetypes that should use 2-space indentation
indent_size = 2

[{.gitconfig,sxhkdrc,Makefile}]
# Filetypes that should use tab indentation
indent_style = tab

[*.md]
max_line_length = 0
